cat > .gitignore << 'EOF'
# Ignore large genome and index files
genome/
genomeIndex/
*.fa
*.fasta
*.fai
*.gff3
*.gtf

# Ignore alignment files
*.bam
*.sam
*.bai

# Ignore QC outputs
qc/
*.html
*.zip
# Ignore big genome index files
RNA_Seq/genome/genomeIndex/
RNA_Seq/genome/*.fa
RNA_Seq/counts/*.gff3


# Ignore temp and backup files
*.bak
*.backup
tmp_*
EOF
